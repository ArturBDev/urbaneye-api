generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------------------------------------
// Models
// ---------------------------------------------
model User {
  id           String       @id @default(cuid())
  name         String
  email        String       @unique
  passwordHash String
  role         UserRole
  createdAt    DateTime     @default(now())
  occurrences  Occurrence[]
  feedbacks    Feedback[]
}

enum UserRole {
  CITIZEN
  PUBLIC_AGENCY
  COMPANY
}

model Occurrence {
  id          String           @id @default(cuid())
  title       String
  description String?
  status      OccurrenceStatus @default(PENDING)
  imageUrl    String?
  latitude    Float
  longitude   Float
  address     String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  userId      String
  user        User             @relation(fields: [userId], references: [id])
  alerts      Alert[]
  Feedback    Feedback[]
}

enum OccurrenceStatus {
  PENDING
  VALIDATED
  RESOLVED
  IGNORED
}

model Alert {
  id           String      @id @default(cuid())
  title        String
  description  String?
  type         AlertType
  level        AlertLevel
  issuedAt     DateTime    @default(now())
  latitude     Float?
  longitude    Float?
  occurrenceId String?
  occurrence   Occurrence? @relation(fields: [occurrenceId], references: [id])
}

enum AlertType {
  AUTOMATIC
  MANUAL
}

enum AlertLevel {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

model Location {
  id             String           @id @default(cuid())
  name           String
  neighborhood   String?
  city           String
  state          String
  latitude       Float
  longitude      Float
  climateHistory ClimateHistory[]
}

model ClimateHistory {
  id            String   @id @default(cuid())
  date          DateTime
  temperature   Float?
  precipitation Float?
  humidity      Float?
  wind          Float?
  locationId    String
  location      Location @relation(fields: [locationId], references: [id])
}

model Feedback {
  id             String     @id @default(cuid())
  stillHappening Boolean    @default(true)
  description    String?
  createdAt      DateTime   @default(now())
  userId         String
  user           User       @relation(fields: [userId], references: [id])
  occurrenceId   String
  occurrence     Occurrence @relation(fields: [occurrenceId], references: [id])
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ----------------------------------------------------
// ENUMS
// ----------------------------------------------------

enum UserRole {
  CITIZEN
  PUBLIC_AGENCY
  COMPANY
}

enum OccurrenceStatus {
  PENDING
  VALIDATED
  RESOLVED
  IGNORED
}

enum AlertType {
  AUTOMATIC
  MANUAL
}

enum AlertLevel {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum InteractionType {
  SUPPORT
  DISPUTE
}

// ----------------------------------------------------
// MODELS
// ----------------------------------------------------

model User {
  id           String        @id @default(cuid())
  name         String
  email        String        @unique
  passwordHash String
  role         UserRole
  createdAt    DateTime      @default(now())
  occurrences  Occurrence[]
  interactions Interaction[]
}

model Location {
  id           String       @id @default(cuid())
  name         String
  neighborhood String?
  city         String
  state        String
  latitude     Float
  longitude    Float
  occurrences  Occurrence[]
}

model Occurrence {
  id           String           @id @default(cuid())
  title        String
  description  String?
  status       OccurrenceStatus @default(PENDING)
  imageUrl     String?
  latitude     Float
  longitude    Float
  address      String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  userId       String
  locationId   String?
  user         User             @relation(fields: [userId], references: [id])
  location     Location?        @relation(fields: [locationId], references: [id])
  alerts       Alert[]
  interactions Interaction[]
}

model Alert {
  id           String      @id @default(cuid())
  title        String
  description  String?
  type         AlertType
  level        AlertLevel
  issuedAt     DateTime    @default(now())
  latitude     Float?
  longitude    Float?
  occurrenceId String?
  occurrence   Occurrence? @relation(fields: [occurrenceId], references: [id])
}

model Interaction {
  id           String          @id @default(cuid())
  type         InteractionType
  createdAt    DateTime        @default(now())
  userId       String
  occurrenceId String
  user         User            @relation(fields: [userId], references: [id])
  occurrence   Occurrence      @relation(fields: [occurrenceId], references: [id])

  @@unique([userId, occurrenceId])
}
